            {
              "type": "paragraph",
              "text": "Tipos de adjetivos en inglés:"
            },
            {
              "type": "example",
              "children": [
                {
                  "mainText": "Descriptive/Qualitative: {SNIPPET}, {SNIPPET}, nice, hot...",
                  "subText": "Calificativos: gordo, azul, simpático, caliente...",
                  "options": [
                    ["fat", "great"],
                    ["blue", "hat"]
                  ],
                  "rightOptions": [0, 0]
                },
                {
                  "mainText": "Demonstrative: {SNIPPET}, {SNIPPET}, these, those",
                  "subText": "Demostrativos: esto, eso, estos, esos.",
                  "options": [
                    ["this", "where"],
                    ["how", "that"]
                  ],
                  "rightOptions": [0, 1]
                },
                {
                  "mainText": "Quantitative: {SNIPPET}, any, many, much...",
                  "subText": "Cuantitativos: alguno(s), alguno(s), ninguno, mucho(s)...",
                  "options": [
                    ["some", "one"]
                  ],
                  "rightOptions": [0]
                },
                {
                  "mainText": "Interrogative: {SNIPPET}?, {SNIPPET}?, where?, how?...",
                  "subText": "Interrogativos: ¿cuál(es)?, ¿qué?, ¿dónde?, ¿cómo?...",
                  "options": [
                    ["which", "way"],
                    ["what", "any"]
                  ],
                  "rightOptions": [0, 0]
                },
                {
                  "mainText": "Possesive: {SNIPPET}, your, {SNIPPET}, her, our...",
                  "subText": "Posesivos: mi, tu, su (él), su (ella), nuestro(s)...",
                  "options": [
                    ["me", "my"],
                    ["him", "his"]
                  ],
                  "rightOptions": [1, 1]
                },
                {
                  "mainText": "Numeric: {SNIPPET}, four, {SNIPPET}, third...",
                  "subText": "Numéricos: dos, cuatro, primero(s), tercero(s)...",
                  "options": [
                    ["duo", "two"],
                    ["first", "one"]
                  ],
                  "rightOptions": [1, 0]
                }
              ]
            }
          ]
